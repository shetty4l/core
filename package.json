{
  "name": "@shetty4l/core",
  "version": "0.0.0-dev",
  "description": "Shared infrastructure primitives for Bun/TypeScript services",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shetty4l/core.git"
  },
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./result": "./src/result.ts",
    "./version": "./src/version.ts",
    "./config": "./src/config.ts",
    "./signals": "./src/signals.ts",
    "./cli": "./src/cli.ts",
    "./daemon": "./src/daemon.ts",
    "./db": "./src/db.ts",
    "./http": "./src/http.ts",
    "./log": "./src/log.ts"
  },
  "files": [
    "src/",
    "bin/",
    "scripts/install-lib.sh"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bin": {
    "version-bump": "bin/version-bump.js"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "format": "biome check --write src/ test/",
    "format:check": "biome check src/ test/",
    "test": "bun test",
    "validate": "bun run typecheck && bun run lint && bun run format:check && bun run test",
    "version:bump": "bun run src/scripts/version-bump.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "husky": "^9.0.0",
    "oxlint": "^1.48.0",
    "typescript": "^5.0.0"
  }
}
